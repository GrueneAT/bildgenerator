# Extend the base Claude Flow container for GRÃœNE Bildgenerator development
FROM claude-flow:latest

# Run as root
USER root

# Install Playwright system dependencies and Python
# These are required for visual regression tests and logo processing
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Python for logo processing scripts (logo_json.py, embed_logos.py)
    python3 \
    python3-pip \
    # Make for Makefile targets
    make \
    # Playwright browser dependencies for Chromium
    libglib2.0-0 \
    libnspr4 \
    libnss3 \
    libdbus-1-3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libxcb1 \
    libxkbcommon0 \
    libatspi2.0-0 \
    libx11-6 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libcairo2 \
    libpango-1.0-0 \
    libasound2 \
    # Additional utilities
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /root/workspace

# Install Playwright browsers
# This is the only thing that makes sense to pre-install since it's large and slow
# The workspace will be mounted, so no need to copy any files
RUN npx playwright install chromium

# Note: All project files will be mounted via volume at runtime
# No need to copy or build anything - that happens on the mounted volume

# Note: The base image's ENTRYPOINT and CMD are preserved
# This means Claude Code will start automatically when you run the container

# Environment variables for consistent test behavior
ENV PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright
ENV NODE_ENV=development

# Expose port for development server
EXPOSE 8000

# Health check to ensure services are ready
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD node --version && python3 --version && npm --version || exit 1
