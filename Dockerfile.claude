# Extend the base Claude Flow container for GRÃœNE Bildgenerator development
FROM claude-flow:latest

# Run as root
USER root

# Install Python and Make (system dependencies)
# Playwright dependencies will be installed via playwright install --with-deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Python for logo processing scripts (logo_json.py, embed_logos.py)
    python3 \
    python3-pip \
    # Make for Makefile targets
    make \
    # Additional utilities
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /root/workspace

# Install specific Playwright version and browsers with all dependencies
# Using --with-deps ensures all system libraries are installed
# Pin to version 1.56.1 to match package.json
RUN npm install -g @playwright/test@1.56.1 && \
    npx playwright install chromium --with-deps

# Note: All project files will be mounted via volume at runtime
# No need to copy or build anything - that happens on the mounted volume

# Note: The base image's ENTRYPOINT and CMD are preserved
# This means Claude Code will start automatically when you run the container

# Environment variables for consistent test behavior
ENV PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright
ENV NODE_ENV=development

# Expose port for development server
EXPOSE 8000

# Health check to ensure services are ready
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD node --version && python3 --version && npm --version || exit 1
