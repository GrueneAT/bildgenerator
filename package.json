{
  "name": "gruene-bildgenerator",
  "version": "1.0.0",
  "description": "Image generator for GRÜNE political party materials",
  "scripts": {
    "build-css": "tailwindcss -i ./resources/css/input.css -o ./resources/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./resources/css/input.css -o ./resources/css/output.css --minify",
    "build:js": "node scripts/build-js.js",
    "build:css": "node scripts/build-css.js",
    "build": "node scripts/build.js",
    "build:clean": "rm -rf build/ && npm run build",
    "build:watch": "npm run build && npm run build-css",
    "watch:css": "chokidar 'resources/css/**/*.css' --ignore 'resources/css/output.css' -c 'npm run build-css-prod && node scripts/inject-build-timestamp.js'",
    "watch:js": "chokidar 'resources/js/**/*.js' -c 'node scripts/inject-build-timestamp.js && echo \"\\n✅ JavaScript file changed - reload browser to see changes\"'",
    "inject-timestamp": "node scripts/inject-build-timestamp.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npm run build && playwright test --project=e2e-tests",
    "test:e2e-ui": "npm run build && playwright test --project=e2e-tests --ui",
    "test:visual": "npm run build && playwright test --project=fast-tests --project=medium-tests --project=complex-tests",
    "test:visual-ui": "npm run build && playwright test --project=fast-tests --project=medium-tests --project=complex-tests --ui",
    "test:visual-fast": "npm run build && playwright test --project=fast-tests",
    "test:visual-medium": "npm run build && playwright test --project=medium-tests",
    "test:visual-complex": "npm run build && playwright test --project=complex-tests",
    "test:visual-parallel": "npm run build && playwright test --project=fast-tests --project=medium-tests --project=complex-tests --workers=6",
    "test:visual-strict": "npm run build && playwright test visual-regression/tests/ --timeout=90000",
    "test:visual-core": "npm run build && playwright test visual-regression/tests/core-functionality.spec.js",
    "test:visual-templates": "npm run build && playwright test visual-regression/tests/templates.spec.js",
    "test:visual-text": "npm run build && playwright test visual-regression/tests/text-system.spec.js",
    "test:visual-elements": "npm run build && playwright test visual-regression/tests/elements.spec.js",
    "test:visual-qr": "npm run build && playwright test visual-regression/tests/qr-codes.spec.js",
    "test:visual-qr-generator": "npm run build && playwright test visual-regression/tests/qr-generator.spec.js",
    "test:visual-layouts": "npm run build && playwright test visual-regression/tests/layouts.spec.js",
    "test:visual-wizard": "npm run build && playwright test visual-regression/tests/wizard-navigation.spec.js",
    "test:visual-errors": "npm run build && playwright test visual-regression/tests/error-handling.spec.js",
    "test:visual-positioning": "npm run build && playwright test visual-regression/tests/positioning.spec.js",
    "test:visual-backgrounds": "npm run build && playwright test visual-regression/tests/background-images.spec.js",
    "generate-references": "npm run build && GENERATE_REFERENCE=true playwright test visual-regression/tests/",
    "generate-references-script": "./scripts/generate-reference-images.sh",
    "test:all": "npm run test && npm run test:e2e",
    "serve:dev": "make server",
    "serve:build": "cd build && python3 -m http.server 8000",
    "validate:deployment": "scripts/validate-deployment.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.2",
    "chokidar-cli": "^3.0.0",
    "concat": "^1.0.3",
    "cssnano": "^7.0.7",
    "esbuild": "^0.25.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1",
    "nodemon": "^3.1.10",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.0",
    "terser-webpack-plugin": "^5.3.14"
  }
}
