{
  "name": "gruene-bildgenerator",
  "version": "1.0.0",
  "description": "Image generator for GRÃœNE political party materials",
  "scripts": {
    "build-css": "tailwindcss -i ./resources/css/input.css -o ./resources/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./resources/css/input.css -o ./resources/css/output.css --minify",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "test:visual": "playwright test visual-regression/tests/",
    "test:visual-ui": "playwright test visual-regression/tests/ --ui",
    "test:visual-strict": "playwright test visual-regression/tests/ --timeout=90000",
    "test:visual-core": "playwright test visual-regression/tests/core-functionality.spec.js",
    "test:visual-templates": "playwright test visual-regression/tests/templates.spec.js",
    "test:visual-text": "playwright test visual-regression/tests/text-system.spec.js",
    "test:visual-elements": "playwright test visual-regression/tests/elements.spec.js",
    "test:visual-qr": "playwright test visual-regression/tests/qr-codes.spec.js",
    "test:visual-layouts": "playwright test visual-regression/tests/layouts.spec.js",
    "test:visual-wizard": "playwright test visual-regression/tests/wizard-navigation.spec.js",
    "test:visual-errors": "playwright test visual-regression/tests/error-handling.spec.js",
    "test:visual-positioning": "playwright test visual-regression/tests/positioning.spec.js",
    "test:visual-backgrounds": "playwright test visual-regression/tests/background-images.spec.js",
    "generate-references": "GENERATE_REFERENCE=true playwright test visual-regression/tests/",
    "generate-references-script": "./scripts/generate-reference-images.sh",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/dom": "^9.3.3",
    "@playwright/test": "^1.40.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}